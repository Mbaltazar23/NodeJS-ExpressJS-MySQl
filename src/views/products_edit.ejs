<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_header')%>
  <body>
    <%- include('partials/_navbar')%>
    <div class="container mt-5">
      <div class="row">
        <div class="col-md-5">
          <div class="card">
            <div class="card-body">
              <form action="/update/<%= data.codigo %>" method="post">
                <div class="form-group">
                  <input
                    type="text"
                    name="nombre"
                    class="form-control"
                    value="<%= data.nombre %>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="text"
                    name="precio"
                    class="form-control"
                    value="<%= data.precio %>"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="text"
                    name="stock"
                    class="form-control"
                    value="<%= data.stock %>"
                  />
                </div>
                <button type="submit" class="btn btn-primary">
                  Edit Product
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/_footer')%>
  </body>
</html>
